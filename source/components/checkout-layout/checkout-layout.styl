.checkout-layout
	display grid
	gap 50px
	padding-bottom 10px
	+media(desktop)
		grid-template-columns 3fr 1fr
		grid-template-rows repeat(2, auto) 1fr repeat(2, auto)
		grid-auto-flow column dense
	&__block
		padding 16px
		border-radius 8px
		box-shadow var(--shadow-1)
		&--delivery
			grid-column 1/2
			grid-row 1/2
		&--buyer
			grid-column 1/2
			grid-row 2/4
		&--payment
		&--comment
			grid-column 1/2
		&--delivery
			display grid
			gap 16px
			+media(tablet)
				grid-template-columns repeat(2, 1fr)
				gap 24px
			& ^[-2]__subtitle
				margin-bottom 0
		&--payment
			display none
			gap 16px
			+media(tablet)
				grid-template-columns repeat(3, 1fr)
			:nth-child(1 of .checkout-payment:not(.checkout-payment--hidden)):nth-last-child(1 of .checkout-payment:not(.checkout-payment--hidden))
				grid-column span 2
				width fit-content
				padding-right 16px
	&__details
		+media(desktop)
			grid-column 2/3
			grid-row 1/3
			align-self start
	&__subtitle
		grid-column 1/-1
		margin-bottom 16px
		font-size 20px
		font-weight 600
	&__field
		&--wide
			grid-column 1/-1
		.field__placeholder
		.checkbox__caption
			font-size 16px
			color var(--color-option-dark-gray)
	&__description
		font-size 14px
		color var(--color-option-dark-gray)
		+media(desktop)
			grid-column 2/3
			grid-row 3/-1
			margin-top -34px
			padding-inline 20px
	&__another-person:not(&__another-person--active) ~ &__field
		display none
	&__organization
		grid-column 1/-1
		margin-bottom 16px
