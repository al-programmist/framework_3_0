.mobile-navigation
	display: flex
	align-items: flex-start
	justify-content: space-between
	width: 100%
	height: 70px
	padding-top: 5px
	padding-right: 30px
	padding-left: 30px

	background-color: $color.primary
	border-radius: 8px 8px 0 0
	
	+media(tablet) {
		padding-right: 80px;
		padding-left: 80px
	}
	
	+media(desktop) {
		visually-hidden();
	}
	
	&--fixed
		position: fixed
		right: 0
		bottom: 0;
		left: 0
		z-index: 100

		
.disabled-scroll {
	overflow: hidden;
}	

.catalog-mobile--open,	
.menu--open
	.mobile-navigation
		height: 120px;
		padding-top: 55px

.disabled-scroll
	.mobile-navigation
		z-index: 999999
		
