.checkout-tabs
	&__labels
		display flex
		width fit-content
		padding 4px
		background-image var(--color-gradient-primary)
		border-radius 5px
	&__label
		padding 8px 24px
		font-size 16px
		font-weight 600
		color var(--color-primary-white)
		border-radius 5px
		&.js-active
			color var(--color-primary)
			background-color var(--color-primary-white)
	&__content
		display grid
		column-gap 16px
		margin-top 24px
		+media(tablet)
			grid-template-columns repeat(3, 1fr)
