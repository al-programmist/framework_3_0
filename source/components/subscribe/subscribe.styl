.subscribe-form {
	display: flex
	width: 100%

	&__field {
		display: flex
		flex-direction: column
		flex-grow: 1
		flex-shrink: 0
		width: 100%

		+media(tablet) {
			flex-flow: row wrap
		}
	}

	.field__input {
		border-color: $color.primary-white
		
		+media(laptop) {
			font-size: 20px
		}
	}
	
	.field:not(.field--focus) .field__input {
		//border-color: $color.primary-red

		&.js-invalid {
			border-color: $color.option.red;
		}
	}
	
	.field.field--focus .field__input {

		&.js-invalid {
			border-color: $color.primary-white
		}

		+media(laptop) {
			font-size: 20px
		}
	}
	
	.js-invalid .field__placeholder {
		color: $color.option.red;
	}

	.error-message {
		flex-basis: 100%;
	}

	.field__widget {
		position: absolute
		top: 6px
		right: 6px

		+media(tablet) {
			position: static;

			margin-left: 12px
		}
	}
	
	//stylelint-disable
	.field__placeholder {
		color: $color.option.dark-gray;
		font-weight: 400
	}
	//stylelint-enable

	.field__wrapper {
		flex-grow: 1
	}

	+media(tablet) {
		width: 57%;
		padding-top: 13px
	}
}

.subscribe {
	position: relative;

	padding-top: 50px;
	padding-bottom: 10px;

	+media(tablet) {
		padding-bottom: 0
	}

	&::before {
		position: absolute
		top: 0
		right: 0
		left: 0

		display: block
		height: 25px

		background-color: #fff
		border-radius: 0 0 25px 25px

		content: ''

		+media(tablet) {
			height: 50px

			border-radius: 0 0 50px 50px
		}
	}

	&__header {
		line-height: 1
		text-align: center

		+media(tablet) {
			width: 43%
			margin-bottom: 0

			font-size: 24px
			line-height: normal;
			text-align: left
		}

		+media(laptop) {
			padding-right: 50px
		}
	}

	.container {
		+media(tablet) {
			display: flex
			align-items: center
			justify-content: flex-start
		}
	}

}
