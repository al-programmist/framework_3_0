.modal-callback {
	color: $color.primary

	background-color: $color.primary-white;

	&__header {
		margin-bottom: 16px

		font-weight: 700;
		font-size: 24px
	}

	&__text {
		margin-bottom: 24px

		font-weight: 400;
		font-size: 16px
	}
}
	
.modal--callback {
	.modal__body {
		bottom: 0;

		min-height: 386px;

		+media(tablet) {
			max-width: 400px
			min-height: 300px;
			padding: 60px 36px 31px
		}

	}

	.form__field {
		margin-bottom: 0
	}

	.form__buttons {
		margin-top: 5px
	}

	.form__submit.form__submit--callback {
		width: 100%;
		max-width: 100%;
		height: 50px
	}
	
	+media(tablet) {
		align-items: center
	}

}

.modal-callback-form {
	max-width: 768px;
	padding: 0

	border: none;
}	
