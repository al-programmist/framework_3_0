.modal--feedback
	.modal__body
		min-height: 70vh

		+media(tablet)
			min-width: 728px

		+media(desktop)
			min-width: 744px

	.modal__content
		padding: 60px 16px 68px

		+media(tablet)
			padding: 60px 16px 24px

.modal-feedback
	display: flex;
	flex-direction: column
	height: 100%

	&__title
		margin-bottom: 34px
		padding: 0 18px

		font-weight: 700
		font-size: 24px
		line-height: normal
		text-align: center

	&__body
		overflow: auto

		text-align: left

	&__box
		margin-top: 16px
		margin-bottom: 16px

	&__item
		margin-bottom: 16px

		&:last-child
			margin-bottom: 0

		+media(tablet)
			display: flex

	&__prop
		margin-bottom: 10px

		font-weight: 600
		font-size: 16px
		line-height: normal

		+media(tablet)
			margin-right: 10px
			margin-bottom: 0

	&__value
		font-weight: 400
		font-size: 16px
		line-height: normal

		&--color
			color: $color.primary-blue

	&__text
		font-weight: 400
		font-size: 16px
		line-height: normal

		+media(tablet)
			margin-top: 10px

	&__descr
		margin-bottom: 24px

		font-weight: 400
		font-size: 16px
		line-height: normal
		text-align: center

	&__label
		color: $color.option.dark-gray
		font-weight: 400
		font-size: 12px
		line-height: normal

	&__button.button
		display: flex
		width: 100%
		max-width: 328px
		height: 54px
		margin: 16px auto 34px

		+media(laptop)
			height: 54px

	&__row
		+media(tablet)
			display: flex
			gap: 16px

	&__col
		+media(tablet)
			width: 50%
