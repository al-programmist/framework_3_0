.modal-product-delete
	&__title
		grid-column: 1/-1

	&__description
		grid-column: 1/-1
		margin-bottom: 8px

	&__confirm.button:not(.button--callback)
		height: 54px

	.modal__content
		position: relative

		display: grid
		grid-template-columns: repeat(2, 1fr)
		gap: 16px 12px
		padding-bottom: 32px
		+media-max(tablet)
			border-radius 25px 25px 0 0
	.modal__body
		+media-max(tablet)
			bottom 62px
			border-radius 25px 25px 0 0
