.modal-city__action
	position: fixed
	right: 0
	bottom: 0
	left: 0

	display: flex
	flex-direction: column
	gap: 20px
	align-items: center
	padding: 12px $size.padding.mobile 20px

	background: $color.background.primary
	box-shadow: 0 -5px 10px 0 rgba($color.text.primary, .10)

	+media(tablet)
		position: static

		margin-top: 40px
		padding: 0

		background-color: transparent
		box-shadow: none
