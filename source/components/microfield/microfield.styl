.microfield {
	display: block
	width: 40px
	height: 51 px
	overflow: hidden;

	color: $color.primary

	background-color: $color.option.gray;
	border-radius: 4px;
	
	&__input {
		display: block
		width: 100%
		height: 100%
		padding: 14px 15px

		color: inherit
		font-weight: 700
		font-size: 18px

		background-color: inherit;
		
		&.js-invalid {
			//stylelint-disable
			background-color: rgba(227, 30, 37, 0.2)
			//stylelint-enable
		}
	}
}
