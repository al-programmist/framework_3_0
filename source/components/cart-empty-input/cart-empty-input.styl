.cart-empty-input
	position: relative

	&__label
		position: absolute
		top: -10px
		left: 6px
		padding-inline: 5px

		background-color: var(--color-background-primary)

	&__field
		width: 100%
		height: 100%
		padding: 8px 10px 6px

		font-size: 20px
		line-height: 1.8

		border: 1px solid var(--color-basic-yellow)
		border-radius: 4px

	&__close
		position: absolute
		top: -10px
		right: -5px

		width: 20px
		height: 20px

		background-color: var(--color-background-primary)

		+icon(close)
			position: absolute
			inset: 2px

			background-color: var(--color-primary)
