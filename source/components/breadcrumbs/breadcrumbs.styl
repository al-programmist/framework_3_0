.breadcrumbs
	padding: 16px 0 24px

	&__title
		display: flex

		font-weight: 600
		font-size: 24px
		line-height: normal

	&__icon
		display: flex
		flex-shrink: 0
		align-items: center
		justify-content: center
		width: 36px
		height: 36px
		margin-right: 12px

		border: 1px solid $color.option.gray

		.icon
			width: 12px
			height: 12px
