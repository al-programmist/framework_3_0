.checkout-pickup-bubble
	position relative
	isolation isolate
	max-width 300px
	background-color var(--color-primary-white)
	border-radius 4px
	+hover()
		background-color var(--color-primary-white)
	+after()
		position absolute
		bottom -14px
		left 120px
		z-index -1
		width 36px
		height 36px
		background-color var(--color-primary-white)
		border-radius 4px
		rotate 45deg
	.checkout-pickup-item__button
		display block
