.personal-empty
	display: flex
	flex-direction: column
	align-items: center
	justify-content: center
	max-width: 520px
	height: 100%
	margin: 0 auto
	padding: 70px 10px 100px

	.button
		height: 45px
		margin-top: 24px
		padding: 0 31px

		font-weight: 600
		font-size: 16px
		line-height: normal

	+media(desktop)
		padding: 0 10px

	&__img
		margin-bottom: 36px
		padding: 0 10px

	&__title
		font-weight: 600
		font-size: 18px
		line-height: normal
		text-align: center

	&__text
		margin-top: 12px

		font-weight: 400
		font-size: 16px
		line-height: normal
