.hero {
	padding-top: 20px
	padding-bottom: 30px

	+media(tablet) {
		padding-top: 25px;
		padding-bottom: 50px;
	}
}

.hero-slider {
	&__image {
		position: relative

		width: 100%;
		height: 0;
		padding-bottom: 58%
		overflow: hidden;

		border-radius: 8px;

		+media(tablet) {
			padding-bottom: 41%;

			border-radius: 12px;
		}

		+media(desktop) {
			min-height: 400px;

			border-radius: 20px;
		}
	}
}
