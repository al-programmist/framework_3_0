.checkbox {
	display: inline-block
	cursor: pointer
	
	&__inner {
		display: flex
		align-items: center
		justify-content: flex-start
	}
	
	&__indicator {
		position: relative
		display: inline-flex
		align-items: center
		justify-content: center;
		width: 20px
		height: 20px
		border-radius: 4px
		border: 1px solid $color.option.dark-gray
		overflow: hidden;
		transition: border-color $transition.primary,
						background-color $transition.primary
	
		&::before {
			position: absolute
			z-index: 1 
			width: 10px
			height: 10px
			display: block
			content: ''
			opacity: 0
			background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%23fff' d='M6.564.75l-3.59 3.612-1.538-1.55L0 4.26 2.974 7.25 8 2.193z'/%3e%3c/svg%3e");
			transition: opacity $transition.primary,
		}
	}
	
	&__input:checked + .checkbox__indicator {
		background-color: $color.primary-yellow
		border-color: @background-color
		
		&::before {
			opacity: 1
		}
	}
	
	&__input[disabled]  + .checkbox__indicator {
		background-color: $color.option.gray
		border-color: @background-color
		cursor: default
	}
	
	&__input[disabled]  ~ .checkbox__caption {
		color: $color.option.dark-gray
		cursor: default
	}
	
	&__caption {
		margin-left: 8px
		transition: color $transition.primary
	}
	

}
