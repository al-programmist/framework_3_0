.search-panel {
	position: relative

	display: flex
	flex-grow: 0

	border: 1px solid $color.primary;

	&__input {
		display: block
		width: 100%
		height: 40px
		padding: 10px 20px

		color: $color.primary
		font-weight: 400;
		font-size: 14px

		border-radius: 8px
	}

	&__control {
		position: relative

		display: flex
		align-items: center
		justify-content: flex-start
		width: 100%

		&--pr {
			.search-panel__input {
				padding-right: 50px
			}
		}

		&--pl {
			.search-panel__input {
				padding-right: 50px
			}
		}
	}

	.search-button {
		position: absolute
		right: 0
	}


}

.header-catalog-search {
	&__mobile {
		flex-grow: 1;
	}
	
	&__desktop {
		display: none
		flex-grow: 1
		
		+media(desktop) {
			padding-right: 30px
		}
	}

}


.search-desktop--open {
	overflow: hidden;
	
	.up-button {
		visually-hidden()
	}
	
	.search-panel {
		flex-grow: 1
		width: 100%
	}
	
	.header-catalog-search__desktop {
		display: flex
	}

	.header-catalog__search {
		display: none
	}

	.header-categories {
		display: none
	}
	
	.page {
		+before() {
			z-index: 99

			opacity: 0.4
		}
	}
	
	.header {
		+before() {
			z-index: 2

			opacity: 0.4
		}
		
		&__epilog {
			+after() {
				z-index: 2

				opacity: 0.4
			}
		}
	}
	
	.epilog__wrapper {
		overflow: hidden;
		+after() {
			z-index: 5

			opacity: 0.4

		}
	}
}


.search-desktop--open.js-header--fixed {
	.header {
		+before() {
			height: 91px
		}
	}	
}
