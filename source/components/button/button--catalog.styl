.button-catalog 
	width: 150px
	height: 40px
	padding: 0 25px
	overflow: hidden;
	border: none

	color: $color.primary-white;
	font-weight: 700
	font-size: 18px
	line-height: 1

	background-color: transparent;
	//border: 1px solid @color;
	border-radius: 8px

	transition: color $transition.primary

	background-gradient($color.gradient.primary)
	
	+after() {
		position: absolute
		z-index: 2;

		display: block;

		transition: opacity $transition.primary;

		content: ''
		inset: 0;
	
		border-radius: 8px
		border: 1px solid $color.primary-white
	
		pointer-events: none;
	}

	+hover()
		color: $color.primary-white

		background-color: transparent;

		&::before
			opacity: 1;

	+active()
		color: $color.primary-white

		background-color: transparent;
		border-color: @color
	
		&::before
			opacity: 1;

	&__caption
		position: relative
		z-index: 1;

		margin-left: 10px
	
	+media(laptop)
		height: 40px;

		font-size: 18px
	
	.icon
		width: 20px
	
	.icon:first-child
		height: 16px;
		margin-right: 10px
	
	.icon:last-child
		display: none
		height: 20px;
		margin-right: 10px
		margin-left: 0

	&--open
		flex-direction: row-reverse
		padding-left: 21px

		color: $color.primary

		background-color: $color.primary-white
		
		&::before {
			display: none
		}
		
		+hover() {
			color: $color.primary

			background-color: $color.primary-white
		}
		
		+active() {
			color: $color.primary

			background-color: $color.primary-white
		}
		
		.icon:first-child
			display: none
		
		.icon:last-child
			display: inline-flex
			align-items: center
			justify-content: center
			width: 25px
			height: 23px;
			margin-right: 10px
			margin-left: 0
