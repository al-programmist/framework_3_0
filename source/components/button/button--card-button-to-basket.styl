.card-button--to-basket
	position: relative

	display: none
	align-items: center
	justify-content: center
	width: 100%

	max-width: 250px
	height: 50px

	color: $color.primary
	font-weight: 600
	font-size: 18px
	text-align: center

	background-color: transparent;

	border: 2px solid @color
	border-radius: 4px

	transition: color $transition.primary
	
	&::before
		position: absolute
		z-index: -1

		display: block

		border-color: $color.primary
		border-radius: 4px
		opacity: 0;

		transition: opacity $transition.primary

		content: ''
		inset: -2px
			

	+hover()
		border-gradient(2px, 4px, $color.option.orange, $color.gradient.primary)

	+media(desktop) {
		display: inline-flex
	}
