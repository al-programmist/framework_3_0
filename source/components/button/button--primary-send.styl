.button-primary-send
	display: inline-flex
	width: 70px
	height: 40px

	color: $color.primary-white

	background-color: $color.primary;
	border: 2px solid @background-color

	transition: color $transition.primary,
					border-color $transition.primary
	
	+media(tablet) {
		width: 88px
		height: 50px
	}
	
	+media(desktop) {
		width: 220px
	}
	
	.icon:first-child
		display: block
		width: 32px
		height: 22px
		margin-right: 0
		margin-left: 10px
		
		+media(tablet) {
			width: 40px
			height: 32px
		}
		
		+media(desktop) 
			display: none
		
	.button__caption
		display: none
		
		+media(desktop) {
			display: block 	   
		}
	

	+hover()
		color: $color.primary-white

		background-color: $color.primary;
		border: 2px solid @background-color

	+active()
		color: $color.primary-white

		background-color: $color.primary;
		border: 2px solid @background-color
