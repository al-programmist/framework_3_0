.tabs {
	color: $color.primary;
	font-size: 14px

	border-radius: 8px;
	
	+media(tablet) {
		font-size: 18px
	}
	
}
	
.tabs-header {
	display: flex
	align-items: center
	justify-content: space-between
	padding: 12px

	background-color: $color.primary-white;
	border-radius: 8px 8px 0 0;
	
	&__list {
		display: flex
		flex-grow: 1;
		align-items: center
		justify-content: space-around
		overflow: hidden;

		+media(laptop) {
			justify-content: space-between;
			max-width: 560px
		}
	}
}

.tabs-pages {
	overflow: hidden;

	border-radius: 0 0 8px 8px;
}	
	

.tabs-caption {
	position: relative

	display: inline-flex
	flex-shrink: 0;
	align-items: center;
	justify-content: center;
	height: 41px;
	padding-right: 10px
	padding-left: 10px

	border: 1px solid $color.option.dark-gray;
	cursor: pointer
	
	&::after {
		position: absolute
		right: 0
		bottom: 0
		left: 0

		display: block
		width: 100%
		height: 4px

		background: $color.option.dark-gray;
		border-radius: 4px 4px 0 0;
		opacity: 0;

		content: ''
	}
	
	&.js-active {
		font-weight: 600

		&::after {
			opacity: 1
		}
	}
	
}
	

.tabs-page {
	
	visually-hidden();
	
	&.js-active {
		is-visible();
	}
	
	&__inner {
		padding-right: 12px
		padding-bottom: 12px
		padding-left: 12px

		background-color: $color.primary-white;
	}
}

.page-wrapper {
	border: 1px solid $color.option.dark-gray;
}	

.tabs-widgets {
	visually-hidden();
	
	+media(desktop) {
		is-visible();
	}
	
	&__button {
		color: $color.option.dark-gray

		border-color: @color
	}
}	
