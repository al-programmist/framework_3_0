.cookie {
	position: fixed
	left: 50%
	z-index: 5
	bottom: -120px
	transform: translateX(-50%);
	
	padding: 20px
	display: flex
	align-items: center
	justify-content: flex-start
	gap: 20px
	max-width: 580px
	width: 100%
	border-radius: 20px
	color: $color.primary
	font-size: 16px
	font-weight: 400
	background-color: $color.primary-white
	box-shadow: 0px 0px 10px 0px rgba(163, 163, 163, 0.30)
	transition: opacity $transition.primary
	opacity: 0
	
	p {
		margin-bottom: 12px
	}
	
	&__close {
		position: relative
		max-width: 180px
		width: 100%
		height: 53px
		font-size: 18px
		border-radius: 8px
		overflow: hidden;
		font-weight: 700
		color: $color.primary
		background-color: $color.primary-yellow

		background-gradient($color.gradient.primary)
		
		+hover() {
			color: $color.primary-white
			border-color: $color.primary-yellow

			&::before {
				opacity: 1
				z-index: 0
			}
		}
	}
	
	&__caption {
		position: relative
		z-index: 1
	}
	
	&__link {
		font-weight: 700
		transition: color $transition.primary
		
		+hover() {
			color: $color.primary-blue
		}
	}
}

.cookie--open .cookie {
	opacity: 1
	
	+media(tablet) {
		bottom: 88px
	}
	
	+media(desktop) {
		bottom: 20px
	}
}
