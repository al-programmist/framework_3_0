.field {
	position: relative

	&__input {
		display: block
		flex-grow: 1
		flex-shrink: 0
		width: 100% 
		height: 50px
		padding: 22px 12px 8px

		color: $color.primary
		font-weight: 400
		font-size: 16px
		text-overflow: ellipsis;

		background-color: $color.primary-white;
		border: 1px solid $color.option.dark-gray
		border-radius: 4px
	}
	
	&__placeholder {
		position: absolute
		top: 14px
		left: 12px
		z-index: 1

		font-size: 16px

		transition: transform $transition.primary,
						font-size $transition.primary;

		pointer-events: none;
		
		.required {
			display: none

			color: $color.option.red
		}
		
	}
}
	
.error-message {
	display: block
	min-height: 16px
	padding: 0 12px

	color: $color.option.red
	font-size: 12px

	opacity: 1

	transition: opacity $transition.primary
}	

.field--focus {
	.field__placeholder {
		color: $color.primary-blue
		font-size: 14px

		transform: translateY(-14px)
	}
	
	.field__input {
		border-color: $color.primary-blue
	}
	
}
	
.just-validate-error-label {
	opacity: 0
}

.js-invalid {
	.just-validate-error-label {
		opacity: 1
	}
	
	.field__placeholder {
		color: $color.primary-white
		
		.required {
			display: inline-block;
			margin-left: 4px
		}
	}

	.field__input {
		//stylelint-disable
		background-color: rgba(227, 30, 37, 0.2)
		//stylelint-enable
		border-color: $color.option.red;
	}
	
	.error-message {
		opacity: 1
	}
}	

.js-valid {
	.just-validate-error-label {
		opacity: 1
	}
	
	.field__placeholder {
		color: $color.option.dark-gray;
		font-size: 14px

		transform: translateY(-14px)
	}

	.field__input {
		border-color: transparent
	}
	
	.field__wrapper {
		position: relative

		display: block
		
		&::before {
			position: absolute

			display: block

			content: '';
			inset: 0;

		}
		
		border-gradient(1px, 4px, $color.primary, $color.gradient.primary)
	}
}
	
.field--fill {
	.field__placeholder {
		color: $color.option.dark-gray;
		font-size: 14px

		transform: translateY(-14px)
	}
}	
	
.field--fill:not(.required) {
	.field__input {
		border-color: $color.option.dark-gray
	}
}


.field--disabled.field__input {
	color: $color.option.gray

	background-color:@color
}


.js-mask::placeholder {color: transparent;}
