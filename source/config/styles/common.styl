h1,
h2,
h3,
h4,
h5,
h6,
p
	margin-top: 0;	

.hide
	display: none !important

.hide--mobile
	+media-max(tablet)
		display: none !important

.hide--tablet
	+media-interval(tablet, desktop)
		display: none !important

.hide--desktop
	+media(desktop)
		display: none !important

.visually-hidden {
	position: absolute;

	width: 1px;
	height: 1px;
	margin: -1px;
	padding: 0;
	overflow: hidden;

	white-space: nowrap;

	border: 0;

	clip: rect(0 0 0 0);
	clip-path: inset(100%);
}

.visually-hidden--devices {
	+media-max(desktop) {
		position: absolute;

		width: 1px;
		height: 1px;
		margin: -1px;
		padding: 0;
		overflow: hidden;

		border: 0;
		visibility: hidden;
		opacity: 0;
	}
}
	
.visually-hidden--mobile {
	+media-max(tablet) {
		position: absolute;

		width: 1px;
		height: 1px;
		margin: -1px;
		padding: 0;
		overflow: hidden;

		border: 0;
		visibility: hidden;
		opacity: 0;
	}
}

.visually-hidden--tablet {
	+media(tablet) {
		position: absolute;

		width: 1px;
		height: 1px;
		margin: -1px;
		padding: 0;
		overflow: hidden;

		border: 0;
		visibility: hidden;
		opacity: 0;    
	}
}

.visually-hidden--desktop {
	+media(desktop) {
		position: absolute;

		width: 1px;
		height: 1px;
		margin: -1px;
		padding: 0;
		overflow: hidden;

		border: 0;
		visibility: hidden;
		opacity: 0;
	}
}

