extends ../../config/pug/layout

include ../../components/cart-service/cart-service
include ../../components/cart-product/cart-product
include ../../components/cart-details/cart-details
include ../../components/cart-panel/cart-panel
include ../../components/modal/modal-cost-estimate/modal-cost-estimate
include ../../components/modal/modal-login/modal-login

block append config
	-
		pageName = 'Корзина';
		bodyClass = 'cart'
		style = 'style-cart';
		scripts = ['script-cart'];

block variables
	include ../../data/products/cart
block main
	.container
		h1.title.page__title Корзина
			span.cart-counter ( 3 )
		+cartService.page__section
		.cart-layout.page__section
			.cart-layout__table
				each item in cartProducts
					+cartProduct(item).cart-layout__product
			+cartDetails#cart-details.cart-layout__details
			.cart-layout__clarification Способы и время доставки можно выбрать при оформлении заказа
			.cart-layout__instalment
				button.card-button.card-button--check-in.cart-layout__button(type="button")
					span.button__caption В рассрочку
				.cart-layout__clarification Заполните анкету и получите одобрение в течение пару минут
			+cartPanel.cart-layout__bar
block modals
	+modal('modal-login').modal--login.modal--login-step-request
		+modal-login()
	+modal('modal-callback').modal--callback
		+modal-callback()
	+modal('modal-city').modal--city
		+modal-city()
	+modal('modal-message').modal-message--success-subscribe
		+modal-message('Спасибо!', 'Ваша заявка принята.')
	+modal('modal-message-success-login').modal-message--success-login
		+modal-message('Добро пожаловать!', 'Вы вошли в систему.')
	+modal('modal-cookies').modal-message--cookies
		+modalCookies()
	+modalCostEstimate
