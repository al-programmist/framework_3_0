@import '../../config/styles/variables.styl'
@import '../../config/styles/mixins.styl'

// Табы
@import '../../components/tabs/tabs-generic.styl'
@import '../../components/counter'
@import '../../components/switch'

.ui-kit
	.page
		padding-top: 0

	.page__content
		padding: 50px 40px

		background-color: #dedede
	
.demo-list__cookies
	.demo-group
		width: 100%
		.cookie
			position: static
			transform: none

.demo-mobile-navigation
	width: 100%
	
	.demo-group
		flex-grow: 1

//stylelint-disable		
.demo-group
	display: flex
	flex-wrap: wrap
	gap: 20px
	margin-bottom: 10px
	padding: 40px
	
	border: 2px dashed $color.primary
	border-radius: 8px
	
	&:only-child
		margin: 0
//stylelint-enable		

h3
	margin-bottom: 20px

.demo-list
	display: flex
	flex-wrap: wrap
	gap: 20px
	margin-bottom: 30px
	
	&__icons,
	&__tips
		margin: 0

	.icon
		width: 24px
		height: 24px

.demo-list__field,		
.demo-list__radio,		
.demo-list__checkbox
	.demo-group 
		flex-direction: column

.demo-list__field {
	p {
		font-weight: 600
	}
}		
